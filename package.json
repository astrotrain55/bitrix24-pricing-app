{
  "name": "bitrix24-pricing-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --port=4200",
    "watch": "vite build --watch",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build && tsx archiving.ts",
    "preview": "vite preview --host",
    "type-check": "vue-tsc --build --force",
    "format": "prettier --write src",
    "grid": "tsx grid.ts && npx sass-migrator division src/assets/_grid.scss && prettier --write src/assets/_grid.scss",
    "grep": "sh grep.sh"
  },
  "dependencies": {
    "@jamescoyle/vue-icon": "^0.1.2",
    "@mdi/js": "^7.4.47",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vuepic/vue-datepicker": "^8.7.0",
    "axios": "^1.7.2",
    "bitrix24-library": "^0.1.0",
    "object-to-formdata": "^4.5.1",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.21",
    "vue-bitrix24": "^4.0.1",
    "vue-router": "^4.3.0",
    "vue-select": "^4.0.0-beta.6",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/archiver": "^6.0.2",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "archiver": "^7.0.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.2",
    "smart-grid": "^2.1.2",
    "tsx": "^4.11.2",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vue-tsc": "^2.0.11"
  }
}
